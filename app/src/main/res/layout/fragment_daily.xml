<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.daily.DailyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/keyline_start"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/spacing_keyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/keyline_end"
            app:layout_constraintGuide_end="@dimen/spacing_keyline"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/dailyLeftArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:contentDescription="@string/dailyLeftArrow"
            android:src="@drawable/ic_left_arrow"
            app:layout_constraintEnd_toEndOf="@id/guideline1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/keyline_start"
            app:layout_constraintBottom_toBottomOf="@id/dailyAmount"
            app:tint="?attr/colorPrimaryVariant" />

        <ImageView
            android:id="@+id/dailyRightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:contentDescription="@string/dailyRightArrow"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintEnd_toEndOf="@id/keyline_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintBottom_toBottomOf="@id/dailyAmount"
            app:tint="?attr/colorPrimaryVariant" />

        <com.keeppieces.pie_chart.PieChart
            android:id="@+id/pieChart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dailyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ï¿¥2,132.34"
            app:layout_constraintBottom_toBottomOf="@id/pieChart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pieChart"
            style="?attr/textAppearanceHeadline3" />

        <TextView
            android:id="@+id/label_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="@string/label_total"
            app:layout_constraintBottom_toTopOf="@id/dailyAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="?attr/textAppearanceSubtitle2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dailyDetailBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dailyAmount"
            app:icon="@drawable/ic_info_outline"
            style="@style/Widget.Rally.Button.IconOnly" />

        <include
            layout="@layout/layout_daily_type_overview"
            android:id="@+id/layout_daily_type_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintStart_toStartOf="@+id/keyline_start"
            app:layout_constraintEnd_toEndOf="@+id/keyline_end"
            android:layout_marginTop="@dimen/vertical_gutters_half"
            app:layout_constraintTop_toBottomOf="@+id/pieChart"
            />

        <include
            layout="@layout/layout_daily_primary_overview"
            android:id="@+id/layout_daily_primary_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintStart_toStartOf="@+id/keyline_start"
            app:layout_constraintEnd_toEndOf="@+id/keyline_end"
            android:layout_marginTop="@dimen/vertical_gutters_half"
            app:layout_constraintTop_toBottomOf="@+id/layout_daily_type_overview"
            />

        <include
            layout="@layout/layout_daily_account_overview"
            android:id="@+id/layout_daily_account_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintStart_toStartOf="@+id/keyline_start"
            app:layout_constraintEnd_toEndOf="@+id/keyline_end"
            android:layout_marginTop="@dimen/vertical_gutters_half"
            app:layout_constraintTop_toBottomOf="@+id/layout_daily_primary_overview"
            />

        <include
            layout="@layout/layout_daily_member_overview"
            android:id="@+id/layout_daily_member_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintStart_toStartOf="@+id/keyline_start"
            app:layout_constraintEnd_toEndOf="@+id/keyline_end"
            android:layout_marginTop="@dimen/vertical_gutters_half"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_daily_account_overview"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>